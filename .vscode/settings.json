{
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "always",
  },
  "editor.defaultFormatter": "biomejs.biome",
  "prettier.enable": false,
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
